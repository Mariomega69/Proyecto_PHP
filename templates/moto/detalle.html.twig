{% extends 'base.html.twig' %}

{% block title %}Detalle - {{ moto.modelo }}{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="card shadow-lg border-0 overflow-hidden" style="border-radius: 20px;">
            <div class="row g-0">
                <div class="col-lg-6 bg-light d-flex align-items-center justify-content-center p-4">
                    <img src="{{ moto.urlImagen }}" class="img-fluid" style="max-height: 400px; object-fit: contain;">
                </div>
                <div class="col-lg-6 p-5">
                    <h1 class="display-5 fw-bold mb-0">{{ moto.modelo }}</h1>

                    {# BLOQUE DE PUNTUACIÓN MEDIA #}
                    <div class="mb-3 d-flex align-items-center">
                        {% set media = moto.getMediaEstrellas() %}
                        <div class="text-warning me-2" style="font-size: 1.2rem;">
                            {% for i in 1..5 %}
                                {% if i <= media %}
                                    <i class="fas fa-star"></i>
                                {% elseif i - 0.5 <= media %}
                                    <i class="fas fa-star-half-alt"></i>
                                {% else %}
                                    <i class="far fa-star"></i>
                                {% endif %}
                            {% endfor %}
                        </div>
                        <span class="badge bg-primary fs-6">{{ media }} / 5</span>
                        <span class="ms-2 text-muted small">({{ moto.valoraciones|length }} valoraciones)</span>
                    </div>
                    <hr>

                    <h4 class="fw-bold mb-3">Opiniones de usuarios</h4>
                    <div class="mb-4" style="max-height: 250px; overflow-y: auto;">
                        {% for v in valoraciones %}
                            <div class="card mb-2 border-start border-primary border-4 shadow-sm">
                                <div class="card-body p-3">
                                    <div class="d-flex justify-content-between">
                                        <small class="fw-bold">{{ v.usuario.email }}</small>
                                        <span class="text-warning">
                                            {% for i in 1..5 %}<i class="{{ i <= v.estrellas ? 'fas' : 'far' }} fa-star"></i>{% endfor %}
                                        </span>
                                    </div>
                                    <p class="small mb-0">{{ v.comentario ?: 'Sin comentario.' }}</p>
                                </div>
                            </div>
                        {% else %}
                            <p class="text-muted">Nadie ha opinado aún.</p>
                        {% endfor %}
                    </div>

                    <div class="p-4 rounded bg-dark text-white">
                        <h5 class="mb-3">{{ haValorado ? 'Actualizar mi opinión' : 'Dejar valoración' }}</h5>
                        {% if app.user %}
                            {{ form_start(formulario) }}
                            {{ form_widget(formulario) }}
                            <button type="submit" class="btn {{ haValorado ? 'btn-info' : 'btn-primary' }} w-100 mt-3 fw-bold">
                                {{ haValorado ? 'GUARDAR CAMBIOS' : 'PUBLICAR' }}
                            </button>
                            {{ form_end(formulario) }}
                        {% else %}
                            <div class="text-center p-3 border border-secondary rounded">
                                <p class="mb-2">Inicia sesión para valorar esta moto</p>
                                <a href="{{ path('app_login') }}" class="btn btn-sm btn-outline-light">Ir al Login</a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

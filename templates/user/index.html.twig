{% extends 'base.html.twig' %}

{% block title %}Mi Cuenta - Panel Personal{% endblock %}

{% block body %}
    <style>
        body { background-color: #1a1d21; color: #ffffff; }
        .dashboard-header { background-color: #212529; padding: 20px; border-bottom: 1px solid #343a40; }
        .stat-card { background-color: #2c3034; border-radius: 8px; padding: 25px; height: 100%; border-left: 5px solid #0d6efd; }
        .activity-card { background-color: #2c3034; border-radius: 8px; padding: 20px; margin-bottom: 15px; border: 1px solid #3e444a; }
        .text-muted-custom { color: #adb5bd; font-size: 0.9rem; }

        /* ESTILOS TIERMAKER */
        .tier-container { background: #000; border-radius: 8px; overflow: hidden; margin-bottom: 30px; border: 1px solid #444; transition: transform 0.2s; }
        .tier-container:hover { transform: scale(1.01); }
        .tier-row { display: flex; border-bottom: 1px solid #222; min-height: 60px; }
        .tier-label {
            width: 60px; min-width: 60px; display: flex; align-items: center; justify-content: center;
            font-size: 1.5rem; font-weight: bold; color: #000;
        }
        .bg-s { background-color: #ff7f7f; }
        .bg-a { background-color: #ffbf7f; }
        .bg-b { background-color: #ffff7f; }
        .bg-c { background-color: #bfff7f; }
        .tier-items { flex-grow: 1; display: flex; flex-wrap: wrap; gap: 8px; padding: 10px; background: #1a1a1a; }
        .tier-item-box { background: #333; padding: 4px 10px; border-radius: 3px; font-size: 0.8rem; border: 1px solid #444; color: #eee; }
    </style>

    <div class="dashboard-header mb-4">
        <div class="container d-flex justify-content-between align-items-center">
            <h2 class="fw-bold m-0"><i class="fas fa-user-circle me-2"></i>¡Hola, {{ user.nombre|default(user.email) }}!</h2>
            <div class="d-flex gap-2">
                {# Botón de catálogo en la cabecera también para acceso rápido #}
                <a href="{{ path('app_moto') }}" class="btn btn-sm btn-info fw-bold">
                    <i class="fas fa-motorcycle me-1"></i> Ver Catálogo
                </a>
                <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-light">Cerrar Sesión</a>
            </div>
        </div>
    </div>

    <div class="container">
        {# Mensajes Flash #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'warning' ? 'warning' : (label == 'error' ? 'danger' : 'success') }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row mb-5">
            <div class="col-md-8">
                <h4 class="mb-3 fw-bold text-white-50">Estadísticas</h4>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="stat-card">
                            <h5 class="fw-bold">Motos Totales: {{ stats.total_motos|default(0) }}</h5>
                            <small class="text-white-50">En el catálogo</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="stat-card" style="border-left-color: #ffc107;">
                            <h5 class="fw-bold">Mis Rankings: {{ misRankings|length }}</h5>
                            <small class="text-white-50">Formato Tier Maker</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <h4 class="mb-3 fw-bold text-white-50">Acciones rápidas</h4>
                <div class="bg-dark p-3 rounded border border-secondary shadow-sm">
                    {# Botón principal de Catálogo #}
                    <a href="{{ path('app_moto') }}" class="btn btn-primary w-100 mb-4 py-2 fw-bold shadow">
                        <i class="fas fa-list me-2"></i> IR AL CATÁLOGO DE MOTOS
                    </a>

                    <p class="small text-muted border-top border-secondary pt-3 mt-2">Crear/Editar Rankings:</p>
                    {% for cat in categorias %}
                        {% set rankingExistente = null %}
                        {% for r in misRankings %}
                            {% if r.categoria.id == cat.id %}
                                {% set rankingExistente = r %}
                            {% endif %}
                        {% endfor %}

                        {% if rankingExistente %}
                            <a href="{{ path('app_ranking_editar', {'id': rankingExistente.id}) }}" class="btn btn-info btn-sm w-100 mb-2 text-start">
                                <i class="fas fa-edit me-2"></i> Editar {{ cat.nombre }}
                            </a>
                        {% else %}
                            <a href="{{ path('app_ranking_nuevo', {'id': cat.id}) }}" class="btn btn-outline-warning btn-sm w-100 mb-2 text-start">
                                <i class="fas fa-plus-circle me-2"></i> Crear {{ cat.nombre }}
                            </a>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>

        <h4 class="mb-3 fw-bold text-white-50">Mis Rankings Finales</h4>
        <div class="row">
            {% for ranking in misRankings %}
                <div class="col-md-6">
                    <div class="tier-container shadow">
                        <div class="p-2 bg-dark border-bottom border-secondary d-flex justify-content-between align-items-center">
                            <div>
                                <span class="fw-bold text-info">{{ ranking.nombre }}</span>
                                <span class="badge bg-secondary ms-2">{{ ranking.categoria.nombre }}</span>
                            </div>
                            <a href="{{ path('app_ranking_editar', {'id': ranking.id}) }}" class="btn btn-sm btn-outline-info py-0 px-2" style="font-size: 0.75rem;">
                                <i class="fas fa-pencil-alt me-1"></i>Editar
                            </a>
                        </div>

                        {# FILAS TIER (S, A, B, C) #}
                        {% for tier in ['S', 'A', 'B', 'C'] %}
                            <div class="tier-row">
                                <div class="tier-label bg-{{ tier|lower }}">{{ tier }}</div>
                                <div class="tier-items">
                                    {% for item in ranking.items|filter(i => i.tier == tier) %}
                                        <span class="tier-item-box">{{ item.moto.modelo }}</span>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center py-5">
                    <p class="text-muted-custom italic">Todavía no has creado ningún ranking.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

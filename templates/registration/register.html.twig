{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block stylesheets %}
    <style>
        .register-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 30px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 25px;
            font-weight: 600;
        }

        /* Estilo para cada fila del formulario */
        .form-row {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: 600;
            margin-bottom: 8px;
            color: #555;
        }

        input[type="email"],
        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            box-sizing: border-box; /* Importante para el ancho total */
            transition: border-color 0.3s;
        }

        input:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0,123,255,0.2);
        }

        .checkbox-row {
            display: flex;
            align-items: center;
            gap: 10px;
            margin: 20px 0;
        }

        .checkbox-row input {
            width: auto;
        }

        .btn-register {
            width: 100%;
            background-color: #007bff;
            color: white;
            padding: 14px;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-register:hover {
            background-color: #0056b3;
        }

        .alert-error {
            background-color: #f8d7da;
            color: #721c24;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
            list-style: none;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="register-container">
        <h1>Crear Cuenta</h1>

        {% if form_errors(registrationForm) %}
            <div class="alert-error">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}

        {{ form_start(registrationForm) }}
        <div class="form-row">
            {{ form_row(registrationForm.email, { 'attr': {'class': 'form-input'} }) }}
        </div>
        <div class="form-row">
            {{ form_row(registrationForm.nombre, { 'attr': {'class': 'form-input'} }) }}
        </div>
        <div class="form-row">
            {{ form_row(registrationForm.apellidos, { 'attr': {'class': 'form-input'} }) }}
        </div>
        <div class="form-row">
            {{ form_row(registrationForm.plainPassword, {
                'label': 'Contraseña',
                'attr': {'class': 'form-input'}
            }) }}
        </div>
        <div class="checkbox-row">
            {{ form_widget(registrationForm.agreeTerms) }}
            {{ form_label(registrationForm.agreeTerms, 'Acepto los términos y condiciones') }}
        </div>

        <button type="submit" class="btn-register">Registrarse</button>
        {{ form_end(registrationForm) }}
        <div class="footer-link" style="text-align: center; margin-top: 20px; font-size: 14px;">
            ¿Ya tienes cuenta? <a href="{{ path('app_login') }}" style="color: #007bff; text-decoration: none;">Inicia sesión aquí</a>
        </div>
    </div>
{% endblock %}
